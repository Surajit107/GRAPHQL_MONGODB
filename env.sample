# Optional: Feature Flags
# ENABLE_EMAIL_VERIFICATION=true       # Enable/disable email verification
# ENABLE_TWO_FACTOR=true               # Enable/disable two-factor authentication
# ENABLE_SOCIAL_LOGIN=true            # Enable/disable social login
# ENABLE_RATE_LIMITING=true           # Enable/disable rate limiting
# ENABLE_CACHING=true                 # Enable/disable caching

# Optional: Cache Configuration
# CACHE_TTL=3600                      # Cache time-to-live in seconds
# CACHE_MAX_ITEMS=1000                # Maximum number of items in cache

# Optional: Database Pool Configuration
# DB_POOL_SIZE=10                     # Database connection pool size
# DB_POOL_TIMEOUT=30000               # Database connection pool timeout in milliseconds

# Optional: Session Configuration
# SESSION_SECRET=your-session-secret   # Secret for session encryption
# SESSION_TTL=86400                   # Session time-to-live in seconds

# Optional: File Upload
# MAX_FILE_SIZE=5242880               # Maximum file size in bytes (5MB)
# ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf # Comma-separated list of allowed file types
# UPLOAD_DIR=uploads                  # Directory for file uploads

# Optional: Security Headers
# ENABLE_HELMET=true                  # Enable/disable Helmet security headers
# ENABLE_CSP=true                     # Enable/disable Content Security Policy
# CSP_DIRECTIVES=default-src 'self'   # Content Security Policy directives

# Optional: API Documentation
# ENABLE_SWAGGER=true                 # Enable/disable Swagger documentation
# API_PREFIX=api                      # API route prefix
# API_VERSION=v1                      # API version

# Optional: Maintenance Mode
# MAINTENANCE_MODE=false              # Enable/disable maintenance mode
# MAINTENANCE_MESSAGE=System is under maintenance  # Maintenance mode message

# Optional: Health Check
# HEALTH_CHECK_PATH=/health           # Health check endpoint path
# HEALTH_CHECK_INTERVAL=30000         # Health check interval in milliseconds

# Optional: Metrics
# ENABLE_METRICS=true                 # Enable/disable metrics collection
# METRICS_PATH=/metrics               # Metrics endpoint path
# PROMETHEUS_PORT=9090               # Prometheus metrics port

# Optional: Debug
# DEBUG=false                         # Enable/disable debug mode
# DEBUG_NAMESPACE=app:*              # Debug namespace
# LOG_FORMAT=json                    # Log format (json or simple)

# Optional: Performance
# ENABLE_COMPRESSION=true            # Enable/disable response compression
# COMPRESSION_LEVEL=6                # Compression level (1-9)
# ENABLE_CORS=true                   # Enable/disable CORS
# CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE  # Allowed CORS methods
# CORS_CREDENTIALS=true              # Allow CORS credentials

# Optional: Testing
# TEST_DB_URI=mongodb://localhost:27017/test-db  # Test database URI
# TEST_TIMEOUT=5000                  # Test timeout in milliseconds
# COVERAGE_THRESHOLD=80              # Test coverage threshold percentage