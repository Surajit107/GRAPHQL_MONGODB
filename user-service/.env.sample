# Application
NODE_ENV=                         # development, production, or test
PORT=                             # Port number for the application (e.g., 3001)
CORS_ORIGIN=                      # CORS origin (use * for development, specific domain for production)

# Database
MONGODB_URI=                      # MongoDB connection string

# Microservice Communication
AUTH_SERVICE_URL=                 # URL for the auth service (e.g., http://localhost:3000)

# Logging
LOG_LEVEL=                        # Log level (error, warn, info, debug, verbose)

# Security
RATE_LIMIT_WINDOW=                # Rate limiting window in minutes
RATE_LIMIT_MAX=                   # Maximum number of requests per window