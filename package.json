{
  "name": "graphql-microservices",
  "version": "1.0.0",
  "description": "GraphQL Microservices with NestJS",
  "scripts": {
    "start:auth": "cd auth-service && npm run start:dev",
    "start:users": "cd user-service && npm run start:dev",
    "start:gateway": "cd gateway-service && npm run start:dev",
    "start:dev": "concurrently \"npm run start:auth\" \"npm run start:users\" \"npm run start:gateway\"",
    "install:auth": "cd auth-service && npm install --legacy-peer-deps",
    "install:users": "cd user-service && npm install --legacy-peer-deps",
    "install:gateway": "cd gateway-service && npm install --legacy-peer-deps",
    "install:all": "concurrently \"npm run install:auth\" \"npm run install:users\" \"npm run install:gateway\"",
    "install:common": "cd common-service && npm install",
    "build:all": "npm run build:auth && npm run build:user && npm run build:common && npm run build:gateway",
    "build:auth": "cd auth-service && npm run build",
    "build:user": "cd user-service && npm run build",
    "build:common": "cd common-service && npm run build",
    "build:gateway": "cd gateway-service && npm run build",
    "test:all": "npm run test:auth && npm run test:user && npm run test:common",
    "test:auth": "cd auth-service && npm test",
    "test:user": "cd user-service && npm test",
    "test:common": "cd common-service && npm test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "clean:all": "npm run clean:auth && npm run clean:user && npm run clean:common && npm run clean:gateway",
    "clean:auth": "cd auth-service && rm -rf dist node_modules",
    "clean:user": "cd user-service && rm -rf dist node_modules",
    "clean:common": "cd common-service && rm -rf dist node_modules",
    "clean:gateway": "cd gateway-service && rm -rf dist node_modules",
    "lint:all": "npm run lint:auth && npm run lint:user && npm run lint:common",
    "lint:auth": "cd auth-service && npm run lint",
    "lint:user": "cd user-service && npm run lint",
    "lint:common": "cd common-service && npm run lint"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}